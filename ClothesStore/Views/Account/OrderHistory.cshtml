@model ClothesStore.Models.ProfileViewModel

<div class="p-4">
    <span class="fw-bold fs-4">Lịch sử đặt hàng</span>
    <div class="ms-2 mt-3">
        @if (Model.Order == null || !Model.Order.Any())
        {
            <p>Không có đơn hàng.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Mã đơn</th>
                            <th>Ngày đặt</th>
                            <th>Trạng thái</th>
                            <th>Tổng tiền</th>
                            <th>Chi tiết</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Order)
                        {
                            <tr>
                                <td>@order.OrderID</td>
                                <td>@order.CreatedAt</td>
                                <td>@order.Status.ToString().Replace("_", " ")</td>
                                <td>@order.TotalAmount</td>
                                <td>@Html.ActionLink("Xem chi tiết", "OrderDetail", "Orders", new { orderId = order.OrderID }, null)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
