@model ClothesStore.Models.ProfileViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<style>
    .nav-item.ps-4:hover {
        background: gray;
        color: white;
    }
</style>
<div>
    <div class="container">
        <div class="container-fluid">
            <div style="height: 10px;"></div>
            <div class="container-fluid mt-2">
                <nav aria-label="breadcrumb" style="--bs-breadcrumb-divider: '|';">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" style="text-decoration: none; color: black">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page" style="color: black">Tài khoản</li>
                    </ol>
                </nav>
            </div>
            <div class="d-flex justify-content-between">
                <div class="bg-white rounded shadow bg-body-tertiary p-0" style="width: 350px; margin-right: 25px;">
                    <div class="d-flex justify-content-center mt-5">
                        <img src="~/Content/images/logo_2.png" class="block rounded-circle" style="width: 60px; height: 60px;">
                    </div>
                    <div class="text-center fw-bold mt-2 mb-2 fs-5">
                        @Model.FullName
                        <a id="capNhat">
                            <span><i class="bi bi-pencil-square ms-1 fs-4"></i></span>
                        </a>
                    </div>
                    <div class="mt-5" style="margin-bottom: 300px;">
                        <ul class="navbar-nav">
                            <li class="nav-item ps-4 p-2" id="dangXuat">
                                <a href="#" class="nav-link p-0">
                                    <span class="fw-semibold">
                                        <i class="bi bi-box-arrow-right me-1 fs-5"></i>
                                        Đăng xuất
                                    </span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="bg-white rounded shadow bg-body-tertiary p-0" style="width: 900px;" id="main-content">
                    <div class="p-4">
                        <span class="fw-bold fs-4">Cập nhật thông tin</span>

                        <div class="ms-2 mt-3">
                            @using (Html.BeginForm("CreateProfile", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-group m-2">
                                    <label for="FullName" class="mb-2">Họ tên:</label>
                                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control rounded-pill" })
                                    @Html.ValidationMessageFor(m => m.FullName)
                                </div>

                                <div class="form-group m-2">
                                    <label for="PhoneNumber" class="mb-2">Số điện thoại:</label>
                                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control rounded-pill" })
                                    @Html.ValidationMessageFor(m => m.PhoneNumber)
                                </div>

                                <div class="form-group m-2">
                                    <label for="Address" class="mb-2">Địa chỉ:</label>
                                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control rounded-pill" })
                                    @Html.ValidationMessageFor(m => m.Address)
                                </div>

                                <div class="form-group m-2">
                                    <label for="DateOfBirth" class="mb-2">Ngày sinh:</label>
                                    @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control rounded-pill", type = "date" })
                                    @Html.ValidationMessageFor(m => m.DateOfBirth)
                                </div>

                                <div class="form-group m-2">
                                    <label for="Gender" class="mb-2">Giới tính:</label>
                                    @Html.DropDownListFor(m => m.Gender, new SelectList(new List<SelectListItem>
                                    {
                                        new SelectListItem { Text = "Nam", Value = "Nam" },
                                        new SelectListItem { Text = "Nữ", Value = "Nữ" }
                                    }, "Value", "Text"), "Chọn giới tính", new { @class = "form-control rounded-pill" })
                                    @Html.ValidationMessageFor(m => m.Gender)
                                </div>
                                <div class="d-flex justify-content-center mt-5">
                                    <button type="submit" class="btn btn-primary w-50 rounded-pill">Lưu thông tin</button>
                                </div>
                            }

                            <div class="text-center mt-3">
                                <p><a href="@Url.Action("Index", "Home")">Quay lại trang chính</a></p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



